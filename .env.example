# Apify API Token — get yours at https://console.apify.com/account/integrations
APIFY_API_TOKEN=your_apify_token_here

# Anthropic API Key — get yours at https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI API Key (used for Whisper transcription)
OPENAI_API_KEY=your_openai_key_here

# --- Optional: Google Sheets export ---
# Path to your service account JSON credentials file
GOOGLE_SERVICE_ACCOUNT_FILE=credentials.json
# The ID of the Google Sheet to write results to (from the URL)
GOOGLE_SHEET_ID=your_sheet_id_here

# --- Scraper defaults (can be overridden via CLI flags) ---
# Comma-separated hashtags or profile URLs to scrape
SCRAPE_TARGETS=fitness,motivation,entrepreneur
# Minimum view count to include a reel
MIN_VIEWS=1000000
# Maximum number of reels to pull per target
MAX_REELS_PER_TARGET=20
# Number of scripts to generate
SCRIPTS_TO_GENERATE=10
